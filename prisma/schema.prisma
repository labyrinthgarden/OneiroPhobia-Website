datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  resetCode        String?   // C贸digo de recuperaci贸n
  resetCodeExpires DateTime? // Expiraci贸n del c贸digo
}